<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileUI.MainPage">

    <StackLayout>
        <!-- Place new controls here -->

        <StackLayout x:Name="commonErr"/>

        <Entry x:Name="firstName" Placeholder="First Name" />
        <StackLayout x:Name="fnameErr"/>
        <Entry x:Name="lname" Placeholder="Last Name" />
        <StackLayout x:Name="lnameErr"/>
        <Entry x:Name="age" Placeholder="Age" />
        <StackLayout x:Name="ageErr"/>
        <DatePicker x:Name="fireDate" />
        <TimePicker x:Name="fireTime" />
        <StackLayout x:Name="dateErr"/>
        <Label x:Name="display" />
        <Button x:Name="submitBtn" Text="Ok" />
        <Button x:Name="showBtn" Text="Show" />
        <Button x:Name="invalidBtn" Text="No Errors" />
        <Button x:Name="noDataBtn" Text="Common error" />

    </StackLayout>

</ContentPage>
